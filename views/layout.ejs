<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SEI23 Challenge</title>
    <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
    crossorigin="anonymous"
  />
</head>
<body>
  <% if(alerts.error){%> <% alerts.error.forEach(message => {%>
    <div class="alert alert-danger mb-0">
      <%= message %>
    </div>
    <%}) } %> <% if(alerts.success){%> <% alerts.success.forEach(message => {%>
    <div class="alert alert-success mb-0">
      <%= message %>
    </div>
    <%}) } %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">CoronaVirus Seniors</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/"
              >Home <span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/list">List</a>
          </li>
          <% if(currentUser){%>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
          <% }else { %>
          <li class="nav-item">
            <a class="nav-link" href="/auth/signin">Login</a>
          </li>
          <% } %>
        </ul>
      </div>
    </nav>
    <%- body %> 
</body>
</html>